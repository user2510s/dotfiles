<?xml version="1.0" encoding="UTF-8"?>
<interface domain="Bluetooth-Battery-Meter@maniacx.github.com">
  <template class="BluetoothBatteryMeter_Indicator" parent="AdwPreferencesPage">
    <property name="name">Indicator</property>
    <property name="title" translatable="yes">Indicator</property>
    <property name="icon-name">bbm-panel-symbolic</property>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Bluetooth System Indicator Settings</property>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Bluetooth Connection Status Indicator</property>
            <property name="subtitle" translatable="yes">Hide conditionally: Displayed only when no other bluetooth related indicators are present</property>
            <property name="activatable-widget">hide_bluetooth_indicator</property>
            <child>
              <object class="GtkDropDown" id="hide_bluetooth_indicator">
                <property name="valign">center</property>
                <property name="model">hide_bluetooth_indicator_model</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Battery Indicator Settings</property>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Choose Indicator mode</property>
            <property name="subtitle" translatable="yes">Off: No battery indicator.&#xA;System Indicator: Battery icon in top bar.&#xA;Panel Button: Battery icon with menu.</property>
            <property name="activatable-widget">indicator_type</property>
            <child>
              <object class="GtkDropDown" id="indicator_type">
                <property name="valign">center</property>
                <property name="model">indicator_type_model</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="panel_indicator_mode_group">
        <property name="title" translatable="yes">Panel Button Mode</property>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Panel button indicator mode.</property>
            <property name="subtitle" translatable="yes">On: Show one selected device. Off: Show all devices</property>
            <property name="activatable-widget">panel_button_indicator_mode</property>
            <child>
              <object class="GtkSwitch" id="panel_button_indicator_mode">
                <property name="valign">center</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="indicator_settings_group">
        <property name="title" translatable="yes">Indicator Settings</property>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Show Separate Battery Indicators</property>
            <property name="subtitle" translatable="yes">When enabled, display one indicator per battery. When disabled, show a single indicator with the most critical (lowest) battery level.</property>
            <property name="activatable-widget">enable_multi_indicator_mode</property>
            <child>
              <object class="GtkSwitch" id="enable_multi_indicator_mode">
                <property name="valign">center</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="on_hover_group">
        <property name="title" translatable="yes">Show Popup on Hover</property>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Show Detailed Info on Hover</property>
            <property name="subtitle" translatable="yes">Displays a popup with battery info and controls when the mouse pointer hovers over the indicator for a custom delay</property>
            <property name="activatable-widget">enable_hover_on_mode</property>
            <child>
              <object class="GtkSwitch" id="enable_hover_on_mode">
                <property name="valign">center</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwSpinRow" id="hover_delay_spinrow">
            <property name="title" translatable="yes">Hover Activation Delay</property>
            <property name="subtitle" translatable="yes">Specify the number of seconds the mouse must hover over the indicator before detailed information is displayed.</property>
            <property name="sensitive" bind-source="enable_hover_on_mode" bind-property="active" bind-flags="sync-create" />
            <property name="digits">1</property>
            <property name="adjustment">
              <object class="GtkAdjustment">
                <property name="lower">0.2</property>
                <property name="upper">5</property>
                <property name="value">1</property>
                <property name="page-increment">0.5</property>
                <property name="step-increment">0.1</property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
  <object class="GtkStringList" id="hide_bluetooth_indicator_model">
    <items>
      <item translatable="yes">Default Behaviour</item>
      <item translatable="yes">Hide Always</item>
      <item translatable="yes">Hide Conditionally</item>
    </items>
  </object>
  <object class="GtkStringList" id="indicator_type_model">
    <items>
      <item translatable="yes">Off</item>
      <item translatable="yes">System Tray</item>
      <item translatable="yes">Panel Button</item>
    </items>
  </object>
</interface>
